@{
    ViewData["Title"] = "Doğrulama Kodu";
}

<div class="login-page">
    <div class="login-card">
        <div class="text-center mb-4">
            <h2>Doğrulama Kodu</h2>
            <p class="text-muted">Email adresinize gönderilen 6 haneli kodu giriniz.</p>
        </div>

        <form method="post" class="login-form" action="@Url.Action("VerifyCode", "Login")" autocomplete="off">
            <div class="form-group mb-3">
                <label for="code">Doğrulama Kodu</label>
                <input id="code" name="code" class="form-control form-control-lg" type="text" required maxlength="6" pattern="\d{6}" />
                <input type="hidden" name="email" value="@TempData["UserEmail"]" />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Doğrula</button>
                <a class="btn btn-link w-100" href="@Url.Action("Index", "Login")">Geri Dön</a>
            </div>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">
                <i class="bi bi-exclamation-circle me-2"></i>
                @TempData["Error"]
            </div>
        }
    </div>
</div>

<style>
.login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.login-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 0 40px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 400px;
}

.form-control-lg {
    font-size: 1.25rem;
    letter-spacing: 0.2em;
    text-align: center;
}
</style>