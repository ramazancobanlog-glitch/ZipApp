@model login.Models.Cart
@using login.Helpers





<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm rounded-4 mt-4">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h2 class="mb-0">Sepetim</h2>
            </div>
            <div class="card-body">
                @if (Model == null || Model.Items == null || !Model.Items.Any())
                {
                    <div class="alert alert-info">Sepetiniz boş.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle rounded-3 overflow-hidden">
                            <thead class="table-light">
                                <tr>
                                    <th>Ürün</th>
                                    <th>Adet</th>
                                    <th>Fiyat</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.Product?.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@TurkishLiraFormatting.Format(item.Product?.Price ?? 0)</td>
                                        <td>
                                            <button class="btn btn-danger btn-sm remove-item-btn" data-id="@item.Id" type="button">
                                                <i class="bi bi-trash"></i> Sil
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="fs-5 fw-bold p-2 bg-light rounded-3 border">
                            Toplam: <span class="text-primary">@TurkishLiraFormatting.Format(Model.Items.Sum(i => (i.Product?.Price ?? 0) * i.Quantity))</span>
                        </div>
                        <form method="post" action="/Cart/ConfirmCart" class="ms-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="cartId" value="@Model.Id" />
                            <button class="btn btn-success btn-lg px-4 rounded-3" type="submit">
                                <i class="bi bi-check-circle me-2"></i>Sepeti Onayla
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
