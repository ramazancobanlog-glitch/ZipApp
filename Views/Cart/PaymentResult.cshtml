@{
    ViewData["Title"] = "Ödeme Sonucu";
    var paymentMessage = TempData["PaymentResult"] as string ?? "Ödeme işlemi tamamlandı.";
    var isSuccess = paymentMessage.Contains("başarılı") || paymentMessage.Contains("onaylandı");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body text-center p-5">
                    @if (isSuccess)
                    {
                        <div style="font-size: 4rem; color: #28a745; margin-bottom: 20px;">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <h2 class="card-title mb-3" style="color: #28a745;">Ödeme Başarılı!</h2>
                    }
                    else
                    {
                        <div style="font-size: 4rem; color: #dc3545; margin-bottom: 20px;">
                            <i class="bi bi-x-circle"></i>
                        </div>
                        <h2 class="card-title mb-3" style="color: #dc3545;">Ödeme Başarısız</h2>
                    }

                    <p class="card-text mb-4">@paymentMessage</p>

                    <div class="d-flex gap-2 justify-content-center">
                        @if (isSuccess)
                        {
                            <a href="/Cart/Orders" class="btn btn-primary">
                                <i class="bi bi-box me-2"></i>Siparişlerime Git
                            </a>
                        }
                        else
                        {
                            <a href="/Cart/Index" class="btn btn-primary">
                                <i class="bi bi-bag me-2"></i>Sepete Dön
                            </a>
                        }
                        <a href="/Home/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-2"></i>Ana Sayfa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    .card {
        border-radius: 12px;
    }
</style>