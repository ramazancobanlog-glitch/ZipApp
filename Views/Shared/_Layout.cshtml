    <script>
        // Müşteri bilgileri
        let currentCustomerName = "@(User.Identity?.Name ?? "Ziyaretçi")";
        
        // ✅ Sohbet Kutusunu Aç/Kapat
        function toggleChat() {
            // WhatsappChatBox elementini al
            var chatBox = document.getElementById("WhatsappChatBox");
            
            // d-none class'ını toggle et (ekle veya kaldır)
            chatBox.classList.toggle("d-none");
            
            // Chevron ikonu animasyonu
            var icon = document.getElementById("chatToggleIcon");
            icon.style.transform = chatBox.classList.contains("d-none") ? "rotate(0deg)" : "rotate(180deg)";
        }

        // ✅ SignalR Bağlantısı - Gerçek Zamanlı Sohbet
        // Hub'a bağlanmak için SignalR bağlantı kurulumu (müşteri olarak, admin parametresi yok)
        let chatConnection = new signalR.HubConnectionBuilder()
            .withUrl("/hubs/chat")
            .withAutomaticReconnect()
            .build();

        // Admin'den mesaj aldığında bu fonksiyon çalışır
        chatConnection.on("ReceiveAdminMessage", (data) => {
            console.log("Admin mesajı alındı:", data.message, "Gönderen:", data.adminName);
            
            // Admin mesajını ekrana ekle (sol taraf, gri arka plan)
            let chatBox = document.getElementById("chatMessages");
            let bubble = document.createElement("div");
            bubble.className = "d-flex justify-content-start mb-2";
            
            // Admin mesajı - sol tarafa, gri renk
            bubble.innerHTML = `
                <div style="background: #e8f5e9; color: #333; padding: 8px 12px; border-radius: 8px; max-width: 80%; word-wrap: break-word;">
                    <strong style="color: #25d366;">${data.adminName || 'Destek Ekibi'}</strong><br/>
                    ${escapeHtml(data.message)}
                    <small style="color: #999; display: block; margin-top: 4px;">${new Date().toLocaleTimeString('tr-TR')}</small>
                </div>
            `;
            
            chatBox.appendChild(bubble);
            chatBox.scrollTop = chatBox.scrollHeight;
            
            // Yazıyor animasyonunu kaldır
            hideTypingIndicator("admin");
        });

        // Müşteriden mesaj aldığında (admin panelinde görülür)
        chatConnection.on("ReceiveCustomerMessage", (message, customerName) => {
            console.log("Müşteri mesajı alındı:", message);
            // Bu event genelde admin panelinde kullanılır
        });

        // Admin yazıyor göstergesi
        chatConnection.on("ShowAdminTyping", (adminName) => {
            console.log(adminName + " yazıyor...");
            
            let chatBox = document.getElementById("chatMessages");
            
            // Eğer yazıyor animasyonu zaten varsa, bir tane daha ekleme
            if (document.getElementById("adminTypingIndicator")) return;
            
            let typingBubble = document.createElement("div");
            typingBubble.id = "adminTypingIndicator";
            typingBubble.className = "d-flex justify-content-start mb-2";
            
            typingBubble.innerHTML = `
                <div style="background: #f0f0f0; color: #999; padding: 8px 12px; border-radius: 8px;">
                    <strong style="color: #25d366;">${adminName || 'Destek Ekibi'}</strong> yazıyor
                    <span class="typing-dots" style="animation: blink 1.4s infinite;">
                        <span>.</span><span>.</span><span>.</span>
                    </span>
                </div>
            `;
            
            chatBox.appendChild(typingBubble);
            chatBox.scrollTop = chatBox.scrollHeight;
        });

        // Müşteri yazıyor göstergesi
        chatConnection.on("ShowCustomerTyping", (customerName) => {
            // Müşteri yazıyor göstergesi (genelde admin panelinde kullanılır)
        });

        // Yazıyor göstergesini kaldır
        chatConnection.on("StopTyping", (role) => {
            hideTypingIndicator(role);
        });

        // Yazıyor göstergesini gizle
        function hideTypingIndicator(role) {
            if (role === "admin") {
                let indicator = document.getElementById("adminTypingIndicator");
                if (indicator) indicator.remove();
            } else if (role === "customer") {
                let indicator = document.getElementById("customerTypingIndicator");
                if (indicator) indicator.remove();
            }
        }

        // SignalR bağlantısını başlat
        chatConnection.start()
            .then(() => {
                console.log("✅ Müşteri SignalR Chat Hub'a bağlı olundu!");
            })
            .catch(err => {
                console.error("❌ Müşteri SignalR Bağlantı Hatası:", err);
                alert("Destek ekibi ile bağlantı kurulamadı. Lütfen sayfayı yenileyin.");
            });

        // ✅ Mesaj Gönderme Fonksiyonu (SignalR ile)
        function sendMessage() {
            // Mesaj input alanından değer al
            let messageInput = document.getElementById("messageInput");
            let text = messageInput.value.trim();
            
            // Eğer mesaj boşsa, fonksiyondan çık
            if (!text) return;

            // SignalR bağlantısı kontrol et
            if (!chatConnection || chatConnection.state !== signalR.HubConnectionState.Connected) {
                alert("Destek ekibi ile bağlantınız koptu. Lütfen sayfayı yenileyin.");
                console.error("ChatConnection durumu:", chatConnection?.state);
                return;
            }
            
            // Sohbet mesajları kutusunu al
            let chatBox = document.getElementById("chatMessages");
            
            // Yeni bir div oluştur (kullanıcı mesajı kabarcığı)
            let bubble = document.createElement("div");
            bubble.className = "d-flex justify-content-end mb-2"; // Sağa hizala
            
            // Mesaj içeriğini stil ile oluştur (yeşil arka plan)
            bubble.innerHTML = `
                <div style="background: #25d366; color: white; padding: 8px 12px; border-radius: 8px; max-width: 80%; word-wrap: break-word;">
                    ${escapeHtml(text)}
                    <small style="color: #c8f5d8; display: block; margin-top: 4px;">${new Date().toLocaleTimeString('tr-TR')}</small>
                </div>
            `;
            
            // Mesajı sohbet kutusuna ekle
            chatBox.appendChild(bubble);
            
            // Otomatik olarak en aşağıya scroll et
            chatBox.scrollTop = chatBox.scrollHeight;
            
            // Input alanını temizle
            messageInput.value = "";
            
            // Yazıyor göstergesini kaldır
            chatConnection.invoke("StopTyping", "customer")
                .catch(err => console.error(err));
            
            // SignalR üzerinden admin'e mesaj gönder
            console.log("Admin'e mesaj gönderiliyor:", text, "Gönderen:", currentCustomerName);
            chatConnection.invoke("SendMessageToAdmin", text, currentCustomerName)
                .catch(err => console.error("Mesaj gönderme hatası:", err));
        }

        // HTML özel karakterleri kaçış yapan fonksiyon (XSS'i önle)
        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }

        // Yazıyor göstergesini başlat
        function showAdminTyping() {
            chatConnection.invoke("AdminTyping", "Destek Ekibi")
                .catch(err => console.error(err));
        }

        // Yazıyor göstergesini bitir
        function stopTyping() {
            chatConnection.invoke("StopTyping", "customer")
                .catch(err => console.error(err));
        }

        // ✅ Enter tuşu ile mesaj gönderme ve yazıyor göstergesi
        let typingTimeout;
        document.addEventListener("DOMContentLoaded", function() {
            let messageInput = document.getElementById("messageInput");
            if (messageInput) {
                // Yazıyor göstergesini başlat
                messageInput.addEventListener("input", function() {
                    clearTimeout(typingTimeout);
                    chatConnection.invoke("CustomerTyping", "Müşteri")
                        .catch(err => console.error(err));
                    
                    // 3 saniye sonra yaz kesme
                    typingTimeout = setTimeout(() => {
                        chatConnection.invoke("StopTyping", "customer")
                            .catch(err => console.error(err));
                    }, 3000);
                });
                
                // Enter tuşu ile gönder
                messageInput.addEventListener("keypress", function(event) {
                    if (event.key === "Enter") {
                        sendMessage();
                    }
                });
            }
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
