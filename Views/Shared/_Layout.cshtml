<!DOCTYPE html>
<html lang="tr">
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    var __xsrf = Xsrf.GetAndStoreTokens(Context);
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZipApp</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="csrf-token" content="@__xsrf.RequestToken" />
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar Styling - Hepsiburada Theme */
        .navbar-custom {
            background: #FFFFFF;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 12px 0;
            border-bottom: 3px solid #FF6B35;
        }

        .navbar-brand-logo {
            font-size: 1.8rem;
            font-weight: 900;
            color: #FF6B35 !important;
            letter-spacing: -0.5px;
        }

        .nav-menu-item {
            color: #333 !important;
            font-weight: 600;
            margin: 0 15px;
            transition: all 0.3s ease;
            position: relative;
            font-size: 0.95rem;
        }

        .nav-menu-item:hover {
            color: #FF6B35 !important;
        }

        .nav-menu-item::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 0;
            height: 3px;
            background: #FF6B35;
            transition: width 0.3s ease;
        }

        .nav-menu-item:hover::after {
            width: 100%;
        }

        .cart-icon-badge {
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease;
            color: #FF6B35 !important;
            font-size: 1.8rem;
        }

        .cart-icon-badge:hover {
            transform: scale(1.15);
        }

        .cart-badge-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #FF6B35;
            color: white;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            font-weight: bold;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .user-menu-dropdown {
            background: white;
            border: none;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .user-menu-dropdown .dropdown-item {
            color: #333;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .user-menu-dropdown .dropdown-item:hover {
            background: #FFF3F0;
            color: #FF6B35;
            transform: translateX(5px);
        }

        /* Main Content */
        .main-container {
            min-height: calc(100vh - 400px);
        }

        /* Footer Styling - Hepsiburada Theme */
        .footer-custom {
            background: #F3F3F3;
            color: #333;
            padding: 60px 0 20px;
            margin-top: 80px;
            border-top: 1px solid #DDD;
        }

        .footer-section-title {
            font-weight: 700;
            margin-bottom: 20px;
            font-size: 1rem;
            color: #333;
        }

        .footer-link {
            color: #666;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .footer-link:hover {
            color: #FF6B35;
            margin-left: 5px;
        }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: #E8E8E8;
            border-radius: 50%;
            color: #FF6B35;
            margin-right: 10px;
            transition: all 0.3s ease;
        }

        .social-icons a:hover {
            background: #FF6B35;
            color: white;
            transform: translateY(-3px);
        }

        .footer-bottom {
            border-top: 1px solid #DDD;
            padding-top: 20px;
            margin-top: 30px;
            text-align: center;
        }

        .footer-bottom p {
            margin: 0;
            font-size: 0.9rem;
            color: #666;
        }

        @@media (max-width: 768px) {
            .navbar-brand-logo {
                font-size: 1.5rem;
            }

            .nav-menu-item {
                margin: 10px 0;
            }

            .main-container {
                min-height: calc(100vh - 350px);
            }
        }
    </style>
</head>

<body class="bg-light">
    <!-- Top Header Info Bar -->
    <div class="bg-white" style="border-bottom: 1px solid #DDD; padding: 8px 0; font-size: 0.85rem;">
        <div class="container-fluid px-2 px-sm-3 px-lg-5 d-flex justify-content-between align-items-center">
            <div style="color: #666;">
                <i class="bi bi-truck me-2"></i><strong>Ücretsiz Kargo:</strong> 250₺ üzeri siparişlerde
            </div>
            <div style="color: #666;">
                <i class="bi bi-shield-check me-2" style="color: #FF6B35;"></i><strong style="color: #FF6B35;">%100 Güvenli</strong> Alışveriş
            </div>
        </div>
    </div>

    <!-- Main Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
            <div class="container-fluid px-2 px-sm-3 px-lg-5">
                <!-- Logo -->
                <a class="navbar-brand navbar-brand-logo" href="/Home/Index">
                    <i class="bi bi-bag-check me-2"></i>ZipApp
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" style="border: none;">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Items -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-menu-item" href="/Home/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-menu-item" href="#categories">Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-menu-item" href="#about">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-menu-item" href="#contact">İletişim</a>
                        </li>
                    </ul>

                    <!-- Right Side Actions -->
                    <div class="d-flex align-items-center gap-3">
                        <!-- Search -->
                        <div class="input-group" style="width: 200px;">
                            <input type="text" class="form-control" placeholder="Ara..." style="border-radius: 4px 0 0 4px; border: 1px solid #DDD; padding: 8px 12px;">
                            <button class="btn" type="button" style="border-radius: 0 4px 4px 0; background: #FF6B35; color: white; border: 1px solid #FF6B35;">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>

                        <!-- Cart Badge -->
                        <a  class="cart-icon-badge" asp-controller="Cart" asp-action="Index" title="Sepete Git">
                            @await Component.InvokeAsync("CartBadge")
                        </a>

                        <!-- User Menu -->
                        <div class="dropdown">
                            <button class="btn btn-light rounded-circle p-2" type="button" data-bs-toggle="dropdown" style="border: 1px solid #DDD; color: #FF6B35;">
                                <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end user-menu-dropdown">
                                <li><a class="dropdown-item" asp-controller="Login" asp-action="Index"><i class="bi bi-person me-2"></i>Profilim</a></li>
                                <li><a class="dropdown-item" asp-controller="Cart" asp-action="Orders"><i class="bi bi-box me-2"></i>Siparişlerim</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Login/Logout"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="main-container container-fluid px-2 px-sm-3 px-lg-5">
        <main role="main" class="pb-3" style="max-width:var(--max-width); margin: 0 auto;">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container-fluid px-2 px-sm-3 px-lg-5">
            <div class="row mb-5">
                <!-- About -->
                <div class="col-md-3 mb-4">
                    <h6 class="footer-section-title">
                        <i class="bi bi-bag-check me-2" style="color: #FF6B35;"></i><span style="color: #FF6B35;">ZipApp</span>
                    </h6>
                    <p class="mb-0">
                        Milyonlarca ürün, güvenli alışveriş ve hızlı teslimat. Hergün yeni fırsatlar ve indirimler.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h6 class="footer-section-title">Hızlı Bağlantılar</h6>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>Ana Sayfa</a>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>Popüler Ürünler</a>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>İndirim Kampanyaları</a>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>Yeni Çıkanlar</a>
                </div>

                <!-- Support -->
                <div class="col-md-3 mb-4">
                    <h6 class="footer-section-title">Müşteri Hizmetleri</h6>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>İletişim Bilgileri</a>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>Sıkça Sorulan Sorular</a>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>Gizlilik Politikası</a>
                    <a href="#" class="footer-link"><i class="bi bi-chevron-right me-1"></i>Kullanım Koşulları</a>
                </div>

                <!-- Contact & Social -->
                <div class="col-md-3 mb-4">
                    <h6 class="footer-section-title">Bize Ulaşın</h6>
                    <p>
                        <i class="bi bi-telephone me-2" style="color: #FF6B35;"></i>
                        <strong>+90 (555) 123-4567</strong>
                    </p>
                    <p>
                        <i class="bi bi-envelope me-2" style="color: #FF6B35;"></i>
                        <strong>info@zipapp.com</strong>
                    </p>
                    <h6 class="footer-section-title mt-4">Bizi Takip Edin</h6>
                    <div class="social-icons">
                        <a href="#" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" title="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" title="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <p>&copy; 2025 <strong style="color: #FF6B35;">ZipApp</strong> - Tüm hakları saklıdır. | Profesyonel Alışveriş Platformu</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
