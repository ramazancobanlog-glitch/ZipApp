        /* Navbar Styling - Hepsiburada Theme */    
        .navbar-custom {
            background: #FFFFFF;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 12px 0;
            border-bottom: 3px solid #FF6B35;
        }

        .navbar-brand-logo {
            font-size: 1.8rem;
            font-weight: 900;
            color: #FF6B35 !important;
            letter-spacing: -0.5px;
        }

        .nav-menu-item {
            color: #333 !important;
            font-weight: 600;
            margin: 0 15px;
            transition: all 0.3s ease;
            position: relative;
            font-size: 0.95rem;
        }

        .nav-menu-item:hover {
            color: #FF6B35 !important;
        }

        .nav-menu-item::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 0;
            height: 3px;
            background: #FF6B35;
            transition: width 0.3s ease;
        }

        .nav-menu-item:hover::after {
            width: 100%;
        }

        .cart-icon-badge {
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease;
            color: #FF6B35 !important;
            font-size: 1.8rem;
        }

        .cart-icon-badge:hover {
            transform: scale(1.15);
        }

        .cart-badge-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #FF6B35;
            color: white;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            font-weight: bold;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .user-menu-dropdown {
            background: white;
            border: none;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .user-menu-dropdown .dropdown-item {
            color: #333;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .user-menu-dropdown .dropdown-item:hover {
            background: #FFF3F0;
            color: #FF6B35;
            transform: translateX(5px);
        }

        /* Main Content */
        .main-container {
            min-height: calc(100vh - 400px);
        }

        /* Footer Styling - Hepsiburada Theme */
        .footer-custom {
            background: #F3F3F3;
            color: #333;
            padding: 60px 0 20px;
            margin-top: 80px;
            border-top: 1px solid #DDD;
        }

        .footer-section-title {
            font-weight: 700;
            margin-bottom: 20px;
            font-size: 1rem;
            color: #333;
        }

        .footer-link {
            color: #666;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .footer-link:hover {
            color: #FF6B35;
            margin-left: 5px;
        }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: #E8E8E8;
            border-radius: 50%;
            color: #FF6B35;
            margin-right: 10px;
            transition: all 0.3s ease;
        }

        .social-icons a:hover {
            background: #FF6B35;
            color: white;
            transform: translateY(-3px);
        }

        .footer-bottom {
            border-top: 1px solid #DDD;
            padding-top: 20px;
            margin-top: 30px;
            text-align: center;
        }

        .footer-bottom p {
            margin: 0;
            font-size: 0.9rem;
            color: #666;
        }
        .whatsapp-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 9999;
}

.whatsapp-header {
    cursor: pointer;
}

.whatsapp-header:hover {
    opacity: 0.9;
}

.whatsapp-card {
    width: 260px;
    border-radius: 12px !important;
}

        /* ✅ Yazıyor Animasyonu - Yazıyor göstergesi için animasyon */
        .typing-dots span {
            animation: blink 1.4s infinite;
            margin: 0 1px;
        }

        .typing-dots span:nth-child(1) {
            animation-delay: 0s;
        }

        .typing-dots span:nth-child(2) {
            animation-delay: 0.2s;
        }

        .typing-dots span:nth-child(3) {
            animation-delay: 0.4s;
        }

        @@keyframes blink {
            0%, 60%, 100% {
                opacity: 0.3;
            }
            30% {
                opacity: 1;
            }
        }

