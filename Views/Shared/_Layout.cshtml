<!DOCTYPE html>
<html lang="en">
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    var __xsrf = Xsrf.GetAndStoreTokens(Context);
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZipApp</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="csrf-token" content="@__xsrf.RequestToken" />
</head>

<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Login" asp-action="Index">ZipApp</a>
                <a class="navbar-brand" href="/Login/Register">Kayıt Ol</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Add nav items here if needed -->
                    </ul>
                    <div class="d-flex align-items-center ms-auto header-actions">
                        @await Component.InvokeAsync("CartBadge")
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-primary text-white text-center py-3 mt-5 rounded-top-4 shadow-sm">
        <div class="container">
            <small>&copy; 2025 ZipApp. Tüm hakları saklıdır.</small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
