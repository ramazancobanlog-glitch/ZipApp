@model int

<style>
    .cart-link {
        position: relative;
        text-decoration: none;
        color: white;
        padding: 8px 12px;
        transition: all 0.3s ease;
    }

    .cart-link:hover {
        color: #ffd700;
        transform: scale(1.15);
    }

    .cart-link svg {
        width: 28px;
        height: 28px;
        transition: all 0.3s ease;
    }

    #cart-badge {
        position: absolute;
        top: -8px;
        right: -5px;
        background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        font-weight: 800;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
        border: 2px solid white;
        padding: 0;
    }

    .cart-fly {
        position: fixed;
        pointer-events: none;
    }
</style>

<a class="btn btn-link position-relative cart-link" href="/Cart/Index" title="Sepete Git (@Model ürün)">
    <i class="bi bi-bag"></i>
    @if (Model > 0)
    {
        <span id="cart-badge" class="badge">@Model</span>
    }
    <span id="cart-fly" class="cart-fly"></span>
</a>
